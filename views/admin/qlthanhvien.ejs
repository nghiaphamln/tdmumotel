<main class="page manager-page">
    <section class="clean-block about-us">
        <div class="container-fluid">
            <div class="block-heading">
                <h2 class="text-info">Quản lý thành viên</h2>
            </div>


            <div class="container-center ">
                
                <div class="row">
                    <div class="col canphai">
                      <a href="" class="btn btn-primary btn-small mb-3">Thêm thành viên</a>
                    </div>

                    <div class="col">
                      <a href="xemphanhoi" class="btn btn-primary btn-small mb-3">Xem phản hồi</a>
                    </div>
                </div>
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col" class="td20">ID</th>
                                <th scope="col" class="td20 ">TÊN NGƯỜI DÙNG</th>
                                <th scope="col" class="td20">EMAIL</th>
                                <th scope="col" class="td15">SĐT</th>
                                <th scope="col" class="td15">TỔNG BÀI ĐĂNG</th>
                                <th scope="col" class="td15">TRẠNG THÁI</th>
                                <th scope="col" class="td15">SỐ TIỀN TRONG TÀI KHOẢN</th>
                                <th scope="col" class="td15">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                                <% listUser.forEach(function(member) { %>   
                            <tr>         
                                    <td class="td20"> <%= member._id %>  </td>
                                    <td class="td20 tduser"> <%= member.name %> </td>
                                    <td class="td20"> <%= member.email %>  </td>
                                    <td class="td15"> <%= member.phoneNumber %>  </td>
                                    <td class="td15">(Processing)</td>
                                    <% if (member.status == 0) {%>
                                        <td class="td15"> Đang hoạt động </td>
                                    <% } else { %>
                                        <td class="td15"> Bị chặn</td>
                                    <% } %>
                                    
                                    <td class="td15"> <%= member.money %> </td>
                                    <% if (member.status == 0) { %>
                                       <td class="td15"><a href="/admin/ban-member/<%= member._id %>  " class="tm-product-delete-link"><i class="fas fa-ban tm-product-delete-icon" onclick="return confirm('Bạn muốn chặn thành viên này?');" ></i></a></td> 
                                    <% } else { %>
                                        <td class="td15"><a href="/admin/unban-member/<%= member._id %>  " class="tm-product-delete-link"> <i class="far fa-check-circle tm-product-delete-icon" onclick="return confirm('Xác nhận bỏ chặn thành viên');"></i></a></td>
                                    <% } %>  
                                

                            </tr>
                            <% }); %>
                        </tbody>
                    </table>


                </div>
            </div>
         </div>
    </section>

</main>