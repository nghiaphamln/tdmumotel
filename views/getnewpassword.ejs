<main class="page getnewpassword-page">
  <section class="clean-block clean-form dark">
    <div class="container">
      <div class="block-heading">
        <h2 class="text-info">Cập nhật mật khẩu</h2>
      </div>
      <form  method="post">
        <div class="mb-3">
          <% if (messages) { %>
            <p style="color: green; font-size: 15px;"> <%= messages %> </p>
        <% } %> 
          <label class="form-label" for="newpassword">Nhập mật khẩu mới</label
          ><input class="form-control item" type="password" id="newpassword" readonly="" onfocus="this.removeAttribute('readonly');" name="newpassword"/>
        </div>
        <div class="mb-3">
          <label class="form-label" for="reenterpassword">Nhập lại mật khẩu mới</label
          ><input class="form-control item" type="password" id="reenterpassword" readonly="" onfocus="this.removeAttribute('readonly');" name="reenterpassword"/>
        </div>
        <button class="btn btn-gg-login" type="submit">Cập nhật</button>
      </form>
    </div>
  </section>
</main>
  